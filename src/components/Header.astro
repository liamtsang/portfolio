---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import SunP5 from './SunP5.astro';
---

<header>
	<div style="display: block">
		<a href="/" style="display: inline-block">
			<div id="sketch-holder-header"></div>
		</a>
		<SunP5 />

		<h2 id="site-title">
			{SITE_TITLE}
		</h2>
	</div>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
