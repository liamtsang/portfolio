---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image, Picture } from '@astrojs/image/components';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, category, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			article {
				max-width: 36rem;
				margin: 0 auto;
				padding: 0 1rem;
			}
			#category{
				color: blue;
				font-weight: bold;
				margin: 0 0;
			}
			#date {
				margin: 0 0;
			}
			.title {
				font-size: 2em;
				margin: .25em 0em .5em 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
			.last-updated-on {
				font-style: italic;
			}
			
			
			@media (min-width: 600px) {
				div {
			    padding: 0 2rem;
				position: relative;
				left: 50%;
				right: 50%;
				width: 100vw;
				max-width: 100vw;
				margin-left: -50vw;
				margin-right: -50vw;
				text-align: center;
			}}
			
			
			
			
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<p id="category">{category}</p>
				<p id="date"><FormattedDate date={pubDate} /></p>
				<h1 class="title">{title}</h1>
				{heroImage && 
					<div>
						<Picture width="1080" src={heroImage} widths={[200, 400, 600, 1080]} aspectRatio="16:9" />
					</div>}
				{
					updatedDate && (
						<div class="last-updated-on">
							Last updated on <FormattedDate date={updatedDate} />
						</div>
					)
				}
				<hr />
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
